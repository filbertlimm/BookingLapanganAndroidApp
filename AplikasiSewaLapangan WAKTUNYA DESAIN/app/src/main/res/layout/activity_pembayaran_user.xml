<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassUser.PembayaranUser">

    <ImageView
        android:id="@+id/qrPemilik"
        android:layout_width="289dp"
        android:layout_height="242dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/qrcode"

        />

    <Button
        android:id="@+id/btnBayar"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="108dp"
        android:text="Konfirmasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrPemilik" />

    <TextView
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Pembayaran dapat dilakukan melalui QR di atas maupun cash saat datang ke lapangan"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrPemilik" />

</androidx.constraintlayout.widget.ConstraintLayout>