<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassUser.ListJadwal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Lapangan Yang Sedang Dipesan"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listPesanan"
        android:layout_width="match_parent"
        android:layout_height="274dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Pilih Kategori Lapangan"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBasket"
            android:layout_width="125dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#3F51B5"
            android:padding="10dp"
            android:text="basket 🏀"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnBadminton"
            android:layout_width="134dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:padding="10dp"
            android:text="badminton 🏸"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSepakbola"
            android:layout_width="134dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#3F51B5"
            android:padding="10dp"
            android:text="sepak bola ⚽"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#2196F3"
        android:text="Profile" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#DF0707"
        android:text="log out" />


</LinearLayout>